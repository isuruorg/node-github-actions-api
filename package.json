{
  "name": "traceclaw-api",
  "version": "1.0.0",
  "description": "Backend for the traceclaw app",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon",
    "start:dev": "cross-env NODE_ENV=development yarn build && node dist/app.js",
    "start:prod": "cross-env NODE_ENV=production yarn build && node dist/app.js",
    "build": "webpack --progress",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "docker:build-dev": "docker build -t my-api:dev .",
    "docker:run-dev": "docker run -itd -p 4000:4000 my-api:dev",
    "docker:dev": "yarn docker:build-dev && yarn docker:run-dev",
    "docker:rm-containers": "docker stop $(docker ps -a -q)",
    "docker:rm-images": "docker system prune -a"
  },
  "author": "Hasanka Madhushan",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash-es": "^4.17.6",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv-webpack": "^8.0.0",
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.5.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@slack/web-api": "^6.7.1",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.3",
    "clean-webpack-plugin": "^4.0.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csv-parser": "^3.0.0",
    "dayjs": "^1.11.1",
    "dayjs-plugin-utc": "^0.1.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "joi": "^17.6.0",
    "joi-mongoose-objectid": "^2.0.1",
    "joi-objectid": "^4.0.2",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^8.5.1",
    "lodash-es": "^4.17.21",
    "moment": "^2.29.3",
    "mongoose": "^6.1.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
