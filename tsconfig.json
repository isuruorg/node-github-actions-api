{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "routes/*": ["routes/*"],
      "controllers/*": ["controllers/*"],
      "services/*": ["services/*"],
      "models/*": ["models/*"],
      "lib/*": ["lib/*"],
      "db/*": ["db/*"],
      "middlewares/*": ["middlewares/*"],
      "dataMigrations/*": ["dataMigrations"],
      "clients/*": ["clients/"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "watch": true
  },
  "lib": ["es2015"]
}
